<Window x:Class="LegoAssignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LegoAssignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label x:Name="lblHeading" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="15">
                Lego Mindstorms Central Operating Control Panel
            </Label>

            <Button x:Name="btnTaskOne" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="btnTaskOne_Click" Margin="5">
                Task 1 - Navigate To Base
            </Button>
        </StackPanel>
    </Grid>
</Window>
